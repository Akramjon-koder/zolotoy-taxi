<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_order"
    android:orientation="vertical"
    android:background="@drawable/outlinebackground"
    android:elevation="@dimen/size_5dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:layout_marginHorizontal="@dimen/size_3dp"
    android:layout_marginTop="@dimen/size_10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/nomi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_14sp"
            android:textColor="@color/black"
            android:text="К бабуле"
            android:fontFamily="@font/roboto_mono_bold"
            android:layout_marginLeft="@dimen/size_8dp"
            android:layout_marginTop="@dimen/size_8dp"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_14sp"
        android:textColor="@color/black"
        android:text="Ул. Воскова, 4"
        android:ellipsize="end"
        android:fontFamily="@font/roboto"
        android:maxLines="1"
        android:layout_marginLeft="@dimen/size_8dp"
        android:layout_marginTop="@dimen/size_8dp"
        android:layout_marginRight="@dimen/size_8dp" />

    <TextView
        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_14sp"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="nПарковая, 21Б"
        android:fontFamily="@font/roboto"
        android:layout_marginLeft="@dimen/size_8dp"
        android:layout_marginTop="@dimen/size_2dp"
        android:layout_marginRight="@dimen/size_8dp"
        android:layout_marginBottom="@dimen/size_8dp"/>

    </LinearLayout>

